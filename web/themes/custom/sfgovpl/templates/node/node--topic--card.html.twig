{% extends 'node.html.twig' %}
{% block node %}
  {% block title %}
  {% endblock title %}

  {% block body %}
    {% if is_front %}
      {% set el = 'p' %}
    {% endif %}
    {% include "@theme/topic-card.twig" with {
      "title": node.label,
      "description": content.field_description.0['#text'],
      "url": url,
      "elem": el ? el : ''
    } %}
  {% endblock body %}
{% endblock node %}
