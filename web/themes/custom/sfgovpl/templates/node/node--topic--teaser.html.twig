{% set url = path('entity.node.canonical', {'node': elements['#node'].id()  }) %}

{% if node.get('field_description').getValue()[0] %}
  {% set content = node.get('field_description').getValue()[0]['value'] %}
{% endif %}

{% include "@theme/transaction-card.twig" with {
  "transaction_card": {
    "url": url,
    "title": elements['#node'].get('title').getString(),
    "body": content
  }
} %}
