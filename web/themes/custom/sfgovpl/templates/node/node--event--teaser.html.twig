{% extends 'node.html.twig' %}

{% block title %}
{% endblock title %}

{% block body %}
  {% set start_date_time = content.field_start_date.0['#attributes']['datetime'] %}
  {% set end_date_time = content.field_end_date.0['#attributes']['datetime'] %}
  <div class="event--teaser--body">
    <div class="event-details">
      <h2{{ title_attributes.addClass(title_classes) }}><a href="{{ url }}" rel="bookmark">{{ label }}</a></h2>
      <div class="event-date">
        {% if content.field_smart_date[0]['#date'] %}
          {{ content.field_smart_date[0]['#date'] }}
        {% else %}
          {{ start_date_time|date("l, F j") }}
        {% endif %}
      </div>
      {{ content | without('field_start_date','field_end_date','field_address') }}
      <div class="event-meta">
        <div class="event-time">
          {% if content.field_smart_date[0]['#time'] %}
            {{ content.field_smart_date[0]['#time'] }}
          {% else %}
            {{ start_date_time|date("g:i a") }} {{ 'to'|t }} {{ end_date_time|date("g:i a") }}
          {% endif %}
        </div>
        <div class="event-location">
          {{ content.field_address[0]['#location'].title.value }}
        </div>
      </div>
    </div>
  </div>
{% endblock body %}
