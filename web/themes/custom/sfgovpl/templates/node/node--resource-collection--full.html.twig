{% embed 'node--full.html.twig' %}
  
  {% block header %}
    {% for item in content.field_tags %}
      {{ item.get('value').getValue() }}
    {% endfor %}
        
    {% set label = 'Part of Budget' %}
    
    {{ title_prefix }}
    {% include '@theme/hero-banner-color.twig' with {
      'banner': {
        'title': node.label,
        'text': node.field_description.value,
        'label': label
      }
    } %}
    {{ title_suffix }}
  {% endblock header %}

  {% block content %}
    <div class="{{ bundle }}--content">
      <h2>Documents</h2>
      {{ content|without(
        'field_abstract',
        'field_date',
        'field_dept',
        'field_image',
        'field_news_type'
      ) }}
    </div>

  {% endblock content %}
  
{% endembed %}
