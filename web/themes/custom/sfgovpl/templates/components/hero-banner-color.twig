<header class="hero-banner color{% if banner.notranslate %} {{ banner.notranslate }}{% endif %}">
  <div class="responsive-container">
    {% if banner.label %}
      <div class="hero-banner-label">
        {{ banner.label|raw }}
      </div>
    {% endif %}
    <h1>{{ banner.title }}</h1>
    {% if banner.text %}
      <p class="lead-paragraph">{{ banner.text|striptags|raw }}</p>
    {% endif %}
    {% if banner_subtitle %}
      <div class="hero-banner-subtitle">{{ banner_subtitle }}</div>
    {% endif %}
  </div>
</header>
