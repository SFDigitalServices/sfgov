<header class="hero-banner" style="background-color: {{ banner.backgroundcolor }}">
  <div class="hero-banner--container">
    {% if banner.image %}
      <div class="logo">
        <img src="{{ banner.image }}"/>
    </div>
    {% endif %}
    {% if banner.text %}
    <div class="banner-text">
      <p>{{ banner.text }}</p>
    </div>
     {% endif %}
  </div>
</header>
