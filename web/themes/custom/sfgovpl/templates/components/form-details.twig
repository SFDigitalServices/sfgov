{% if content and summary %}
{# Adding h3 to allow screenreaders to follow headings. #}
  <h3 class="sr-only">{{ summary }}</h3>
  <details{{ open ? ' open' : '' }}>
    <summary class="details__summary">{{ summary }}</summary>
    <div class="details__content">
      {{ content }}
    </div>
  </details>
{% endif %}
