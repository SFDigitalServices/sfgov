{% extends 'paragraph.html.twig' %}
{% set parentContentType = paragraph.parentEntity.bundle %}
{% block content %}
  {% set cta_title = content.field_title.0 %}
  {% set url = paragraph.field_button.0.entity.field_link.0.url %}
  {% set button_text = paragraph.field_button.0.entity.field_link.value[0].title %}
  {% set classes = parentContentType == 'department' ? ['btn-inverse'] : [] %}
  {% if cta_title is not empty %}
    <p class="text-white text-title-xs font-medium m-0 mb-24">{{ cta_title }}</p>
  {% endif %}
  {% include "@sfgov-design-system/button/link.twig" with {
      "href": url,
      "text": button_text,
      "classes": classes
  } %}
{% endblock %}
