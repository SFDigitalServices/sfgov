{% extends 'views-view--news--page-1.html.twig' %}

{% block header %}
{% endblock header %}

{% block rows %}

  {% if rows %}
    {% set count = 3 - (rows[0]['#rows']|length) %}

    {% if is_front %}
      {% include '@theme/news-front.twig' %}
    {% else %}

      <a name="news"></a>
      <div id="sfgov-dept-news" class="sfgov-dept-news sfds-layout-container">
        <div class="sfds-responsive-container">
          <h2 class="dept-heading--section">{{ "News"|t }}</h2>
          <div class="sfgov-dept-section-content-container">
            <div class="views-news--rows">
              {{ rows }}
              {% if count > 0 %}
                {% for n in 1..count %}
                  <div class="views-row" style="visibility:hidden"></div>
                {% endfor %}
              {% endif %}
            </div>
            {{ more }}
          </div>
        </div>
      </div>

    {% endif %}

  {% endif %}

{% endblock rows %}

{% block more %}
{% endblock more %}
