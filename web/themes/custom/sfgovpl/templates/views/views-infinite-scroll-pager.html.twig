{% if items.next %}
<ul{{ attributes }}>
  <li class="pager__item view-news-pager-mobile">
    <a class="button" href="{{ items.next.href }}" title="{{ 'Load more items'|t }}" rel="next">{{ options.button_text }}</a>
  </li>
</ul>
{% endif %}
