{% if items is not empty %}
  <p class="title">{{ label }}</p>
  <ul class="sfgov-social-list">
    {% for item in items %}
      {% set facebook = item.content['#paragraph'].get('field_facebook').getValue()[0].uri %}
      {% set instagram = item.content['#paragraph'].get('field_instagram').getValue()[0].uri %}
      {% set twitter = item.content['#paragraph'].get('field_twitter').getValue()[0].uri %}
      {% if facebook %}<li class="facebook"><a href="{{ facebook }}">{{ 'Facebook' | t }}</a></li> {% endif %}
      {% if instagram %}<li class="instagram"><a href="{{ instagram }}">{{ 'Instagram' | t }}</a></li>{% endif %}
      {% if twitter %}<li class="twitter"><a href="{{ twitter }}">{{ 'Twitter' | t }}</a></li>{% endif %}
    {% endfor %}
  </ul>
{% endif %}