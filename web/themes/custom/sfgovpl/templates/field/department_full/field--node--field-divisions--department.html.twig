<h3 class="text-white text-title-xs font-medium m-0 mb-24">{{ label | t }}</h3>
<ul class="flex flex-wrap p-0 m-0 mb-40 list-none">

{% set itemCount = items|length %}

{% for item in items %}
  {% set uri = item.content['#url'] %}
  {% set title = item.content['#title'] %}

  <li class="mb-20 w-full {{ itemCount >= 2 ? 'lg:w-1/2' : 'lg:w-full' }} lg:pr-8"><a class="text-white text-body" href="{{ uri }}">{{ title  }}</a></li>
{% endfor %}

</ul>
