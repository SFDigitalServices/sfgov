{
  "name": "components",
  "browserSyncProxy" : "https://sfgov.lndo.site/",
  "bowerDir": "./bower_components",
  "css": {
    "file" : "src/sass/_all.scss",
    "src": [
      "src/sass/**/*.scss",
      "pattern-lab/source/_patterns/**/*.scss"
    ],
    "dest": "dist/css",
    "includePaths": []
  },
  "pattern_lab": {
    "src": [
      "pattern-lab/source/_patterns/**/*.twig",
      "pattern-lab/source/_patterns/**/*.json"
    ]
  },
  "autoprefixer": [
    "last 2 versions",
    "> 1%",
    "ie 11"
  ],
  "sass": {
    "outputStyle": "expanded"
  }
}
