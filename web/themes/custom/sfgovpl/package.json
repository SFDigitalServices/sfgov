{
  "name": "sfgovpl",
  "private": true,
  "scripts": {
    "browser-sync": "browser-sync start --proxy https://sfgov.lndo.site --files dist",
    "build": "run-p build-css build-js",
    "build-css": "postcss --verbose -d dist/css 'src/sass/*.css'",
    "build-js": "babel -d dist/js 'src/js/*.js' && cp node_modules/sfgov-design-system/dist/js/sfds.js dist/js",
    "develop": "run-p watch start",
    "lint": "prettier --check src",
    "lint-css": "prettier --check 'src/sass/**/*.scss'",
    "lint-js": "eslint '*.js' src/js",
    "lint-fix": "prettier --write src",
    "start": "run-p watch browser-sync",
    "watch": "run-p watch-css watch-js",
    "watch-css": "npm run build-css -- --watch",
    "watch-js": "npm run build-js -- --watch"
  },
  "dependencies": {
    "sfgov-design-system": "^2.4.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@fullhuman/postcss-purgecss": "^4.1.3",
    "autoprefixer": "^9.8.8",
    "browser-sync": "^2.27.10",
    "chalk": "^4.1.2",
    "node-sass": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.5",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.0.2",
    "postcss-node-sass": "^3.1.1",
    "postcss-reporter": "^7.0.4",
    "postcss-scss": "^4.0.2",
    "prettier": "^2.5.1",
    "prettier-plugin-twig-melody": "^0.4.6",
    "purgecss": "^4.1.3"
  }
}
