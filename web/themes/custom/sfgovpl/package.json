{
  "private": true,
  "scripts": {
    "browser-sync": "browser-sync start --proxy https://sfgov.lndo.site --files dist",
    "build": "run-p build-css build-js",
    "build-css": "postcss --verbose -d dist/css 'src/sass/*.css'",
    "build-js": "babel -d dist/js 'src/js/*.js'",
    "develop": "run-p watch start",
    "lint": "prettier --check src",
    "lint-css": "prettier --check 'src/sass/**/*.scss'",
    "lint-js": "prettier --check 'src/js/**/*.js'",
    "lint-fix": "prettier --write src",
    "start": "run-p watch browser-sync",
    "watch": "run-p watch-css watch-js",
    "watch-css": "npm run build-css -- --watch",
    "watch-js": "npm run build-js -- --watch"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.12.13",
    "@babel/preset-env": "^7.12.13",
    "autoprefixer": "^9.8.6",
    "browser-sync": "^2.27.4",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.5",
    "postcss-cli": "^8.3.1",
    "postcss-node-sass": "^3.1.0",
    "postcss-scss": "^4.0.0",
    "prettier": "^2.2.1",
    "prettier-plugin-twig-melody": "^0.4.6",
    "sfgov-design-system": "1.0.0"
  }
}
