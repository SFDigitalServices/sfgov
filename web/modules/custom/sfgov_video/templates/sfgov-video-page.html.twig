{% set attributes = create_attribute() %}
{% set classes = [
  'video',
  'video-full'
] %}

<article{{ attributes.addClass(classes) }}>
  {% include '@theme/hero-banner-color.twig' with {
    'banner': {
      'title': title,
      'text': 'Video transcript'|t
    }
  } %}

  <div class="video--content">
    <div class="container">
      <div class="caption">
        {% for item in body %}
          <p>{{ item.text|raw }}</p>
        {% endfor %}
      </div>
    </div>
  </div>
</article>
